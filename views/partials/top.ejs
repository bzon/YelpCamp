.button-rotate {
    transition: all 0.2s ease-in-out;
}

.button-rotate:hover {
    cursor: pointer;
    animation-name: expand;
    animation-duration: 0.2s;
    animation-delay: .1s;
    animation-fill-mode: both;
}

.add-camp-title {
    transition: all 0.3s ease-in-out;
}

.button-rotate:hover > .add-camp-title {
    animation-name: fadeIn;
    animation-duration: .5s;
    animation-delay: .1s;
    animation-fill-mode: both;
}

@keyframes expand {
    from {width: 30px; border-radius: 50% 50%; text-align: center}
    to {border-radius: 4px; text-align: left; text-indent: 3px; width: 200px}
}

@keyframes fadeIn {
    to {opacity: 1; margin-left: 15px; vertical-align: middle; padding-top: 3px}
}



<div class="container">
    <div class="row" >
        <div class="col-md-6" style="margin: 0 auto">
            <div class="base-card mdl-card mdl-shadow--2dp" style="margin: 0 auto; margin-top: 5%">
                <div class="mdl-card__title">
                    <a href="/campgrounds/<%= campgroundId %>" style="color: #fff; font-size: 25px"><i class="fa fa-chevron-left" style="margin-right: 15px"></i></a>
                    <div style="display: inline-block">
                        <p class="lead" style="margin: 0; vertical-align: top; font-family: 'Raleway'; font-weight: 400">Edit Comment</p>
                        <p class="lead" style="margin: 0; vertical-align: top; font-family: 'Raleway'; font-weight: 300; font-size: 15px"><%= commentCamp %></p>
                    </div>
                </div>
                <div class="mdl-card__supporting-text" style="text-align: center; margin: 0 auto">
                    <form action="/campgrounds/<%= campgroundId %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label" style="height: 73px">
                            <input name="comment[text]" class="mdl-textfield__input" type="text" id="name" value="<%= comment.text%>">
                            <!--<label class="mdl-textfield__label" style="font-weight:400" for="name">Comment</label>-->
                        </div>
                        <div class="mdl-textfield mdl-js-textfield" style="text-align: center">
                            <button type="submit" style="position: unset" class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored mdl-js-ripple-effect">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

